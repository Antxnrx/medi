{
  "manifest_version": 3,
  "name": "MedShield AI",
  "version": "1.2",
  "description": "Flags health misinformation and provides trusted alternatives.",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": ["http://localhost:5001/*", "https://*.firebaseapp.com/*", "https://*.googleapis.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:5001 https://*.googleapis.com https://*.firebaseio.com"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "oauth2": {
    "client_id": "827715109347-rvs2vl1mp7l4v2c8c3e5k4jqpvfj1qul.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email", "https://www.googleapis.com/auth/userinfo.profile"]
  }
}
